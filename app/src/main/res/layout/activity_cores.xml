<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/cerebro"
    android:padding="30dp"
    tools:context=".Cores">

    <Button
        android:id="@+id/verdeId"
        android:layout_width="147dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/green"
        app:layout_constraintEnd_toStartOf="@+id/amareloId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/amareloId"
        android:layout_width="147dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/yelow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/roxoId"
        android:layout_width="147dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/pink"
        app:layout_constraintEnd_toStartOf="@+id/vermelhoId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verdeId"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/vermelhoId"
        android:layout_width="147dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amareloId"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/azulId"
        android:layout_width="147dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintEnd_toStartOf="@+id/marromId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roxoId"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/marromId"
        android:layout_width="147dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vermelhoId"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/pretoId"
        android:layout_width="147dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/cinzaId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azulId"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/cinzaId"
        android:layout_width="147dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marromId"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btSorteia"
        android:layout_width="352dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/sorteio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pretoId" />

</androidx.constraintlayout.widget.ConstraintLayout>